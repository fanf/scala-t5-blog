<t:layout xmlns:t="http://tapestry.apache.org/schema/tapestry_5_0_0.xsd">

	<h2>Last articles</h2>

	<t:loop source="articles" value="article">
		<a t:type="pagelink" t:page="article/view" t:context="article.id.elements()">
			<h3>${article.title}</h3>
		</a>
		
		<div>
			${article.content}
		</div>
	</t:loop>
	
</t:layout>
